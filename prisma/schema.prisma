generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Condition {
  WINTER
  SOMMER
  UEBERGANG
}

enum Activity {
  SPORTKLETTERN
  ALPINKLETTERN
  SPORTKLETTERSTEIG
  HOCHTOUR
  EIS_MIXEDKLETTERN
  WANDERN
  BERGTOUR
  SKITOUR
  SKIHOCHTOUR
}

model User {
  id        String     @id @default(cuid())
  username  String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  tours     Tour[]
  ascents   Ascent[]
  stats     UserStats?
}

model Tour {
  id          String  @id @default(cuid())
  name        String
  description String? @db.Text
  sourceUrl   String?
  location    String?

  // Categories
  conditions Condition[]
  activity   Activity

  // Tour details
  elevation  Int? // meters
  distance   Int? // meters
  duration   Int? // minutes
  difficulty String?
  grade      String?

  // Metadata
  imageUrl String?
  gpxData  String? @db.Text

  // Notes
  notes String? @db.Text

  // Irrelevant flag
  irrelevant Boolean @default(false)

  // Relations
  userId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ascents Ascent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([activity])
}

model Ascent {
  id    String   @id @default(cuid())
  date  DateTime
  notes String?  @db.Text

  // Enhanced details
  startTime  DateTime?
  endTime    DateTime?
  partners   String[]  @default([])
  conditions String?   @db.Text
  weather    String?
  photos     Photo[]

  tourId String
  tour   Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // GPX tracking
  trackPoints TrackPoint[]

  // Computed stats from GPX
  distance      Float? // kilometers
  elevationGain Float? // meters
  elevationLoss Float? // meters
  duration      Int? // minutes
  maxElevation  Float? // meters
  minElevation  Float? // meters

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tourId])
  @@index([userId])
  @@index([date])
}

model TrackPoint {
  id        String    @id @default(cuid())
  latitude  Float
  longitude Float
  elevation Float?
  timestamp DateTime?

  ascentId String
  ascent   Ascent @relation(fields: [ascentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([ascentId])
}

model Photo {
  id        String  @id @default(cuid())
  url       String
  caption   String?
  latitude  Float?
  longitude Float?

  ascentId String
  ascent   Ascent @relation(fields: [ascentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([ascentId])
}

model UserStats {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Lifetime totals
  totalAscents       Int   @default(0)
  totalElevationGain Float @default(0) // meters
  totalDistance      Float @default(0) // kilometers
  totalDuration      Int   @default(0) // minutes

  // Goals
  yearlyAscentGoal    Int?
  yearlyElevationGoal Float?
  monthlyAscentGoal   Int?

  // Streaks (weekly: Monday-Sunday)
  currentStreak  Int       @default(0) // weeks
  longestStreak  Int       @default(0) // weeks
  lastAscentDate DateTime?

  updatedAt DateTime @updatedAt

  @@index([userId])
}
